@{
    ViewData["Title"] = "Home Page";
}

<div class="container">
    <div class="row">
        <div class="col-md-12">
            <h1 class="display-4 mb-4">Visualizador de Documento</h1>
            
            @if (!string.IsNullOrEmpty(ViewBag.BlobSasUrl))
            {
                <div class="card">
                    <div class="card-body">
                        <h5 class="card-title">Documento do Cliente</h5>
                        @if (ViewBag.BlobSasUrl.EndsWith(".pdf", StringComparison.OrdinalIgnoreCase))
                        {
                            <embed src="@ViewBag.BlobSasUrl" type="application/pdf" width="600px" height="600px" />
                        }
                        else
                        {
                            <img src="@ViewBag.BlobSasUrl" class="img-fluid" alt="Documento do Cliente" />
                        }
                    </div>
                    <div class="card-footer">
                        <a href="@ViewBag.BlobSasUrl" class="btn btn-primary" target="_blank">
                            Abrir em Nova Aba
                        </a>
                    </div>
                </div>
            }
            else
            {
                <div class="alert alert-info">
                    <p>Por favor, forneça um ID de cliente válido para visualizar o documento.</p>
                    <form method="get" action="@Url.Action("GenerateSas", "Home")" class="mt-3">
                        <div class="input-group">
                            <input type="text" name="clientId" class="form-control" placeholder="Digite o ID do cliente" required />
                            <button type="submit" class="btn btn-primary">Buscar Documento</button>
                        </div>
                    </form>
                </div>
            }
        </div>
    </div>
</div>